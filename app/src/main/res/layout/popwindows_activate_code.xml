<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="272dp"
        android:layout_height="160dp"
        android:background="@color/backgroundwite"
        >
        <TextView
            android:textColor="@color/heiseziti"
            android:textSize="17sp"
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="生成1个惠玩授权码" />
        <TextView
            android:textSize="13sp"
            android:textColor="@color/heiseziti"
            android:id="@+id/tv_activate_successful_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"
            android:text="当前可生成授权码数：5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fengexian"
            android:layout_alignParentTop="true"
            android:layout_marginTop="115dp">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp">
            <Button
                android:textColor="@color/heiseziti"
                android:background="@color/backgroundwite"
                android:id="@+id/bt_quxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="取消"/>
            <Button
                android:textColor="#3ca0f5"
                android:background="@color/backgroundwite"
                android:textSize="16sp"
                android:id="@+id/bt_ensure_activate_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确定"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
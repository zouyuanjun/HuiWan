<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background">
        <TextView
            android:textSize="13sp"
            android:textColor="@color/colortextblack"
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="我的上级"
            />
        <LinearLayout
            android:background="@color/backgroundwite"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="86dp"
                android:paddingLeft="16dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    app:roundAsCircle="true"
                    android:id="@+id/im_sjphoto"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="16dp">

                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/heiseziti"
                    android:id="@+id/tv_xuesjname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:text="姓名:张三三" />

                <TextView
                    android:textColor="@color/colortextblack"
                    android:textSize="12sp"
                    android:id="@+id/tv_xuesjshouji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_xuesjname"
                    android:layout_marginTop="3dp"
                    android:text="手机号:12584685455" />
                <TextView
                    android:textColor="@color/colortextblack"
                    android:textSize="12sp"
                    android:id="@+id/tv_xuesjweixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_xuesjshouji"
                    android:layout_marginTop="2dp"
                    android:text="微信:DSDFS5555" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/im_sjduanwei"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="18dp"
                    android:background="@mipmap/ic_launcher"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/colortextblack"
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="学员名单"
            />
        <ListView
            android:background="@color/backgroundwite"
            android:id="@+id/lv_studentlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
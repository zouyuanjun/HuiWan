<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp">
    </LinearLayout>
    <LinearLayout
        android:background="@color/backgroundwite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="86dp"
            android:paddingLeft="16dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/im_xjitemphoto"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:background="@drawable/pfile_ic_portrait"   />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/tv_xjitemname"
                android:textSize="13sp"
                android:textColor="@color/heiseziti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:text="姓名:张三三"  />
            <TextView
                android:id="@+id/tv_xjitemphonenum"
                android:textColor="@color/colortextblack"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_xjitemname"
                android:layout_marginTop="4dp"
                android:text="手机号:12584685455"/>

            <TextView
                android:id="@+id/tv_xjitemweixin"
                android:textColor="@color/colortextblack"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_xjitemphonenum"
                android:layout_marginTop="3dp"
                android:text="微信:DSDFS5555"  />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_xjitemkeyongma"
                android:textColor="@color/tishiziti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="18dp"
                android:text="可用转码数：15"  />


        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
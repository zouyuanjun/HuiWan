<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="272dp"
        android:layout_height="160dp"
        android:background="@color/white">
        <TextView
            android:textColor="@color/heiseziti"
            android:textSize="17sp"
            android:id="@+id/tv_popAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="账号：" />
        <TextView
            android:textSize="17sp"
            android:textColor="@color/heiseziti"
            android:id="@+id/tv_popPASSWORD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_popAccount"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"
            android:text="密码：" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fengexian"
            android:layout_above="@+id/bt_getcode">
        </LinearLayout>
        <Button
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:id="@+id/bt_getcode"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="确定"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>